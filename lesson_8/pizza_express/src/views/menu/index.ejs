<%- contentFor('title') %>
Menu

<%- contentFor('body') %>
<div class="container-fluid">
  <h2 class="mx-5 mt-4 mb-3">Menu <span class="badge">🍕</span></h1>

  <section class="row px-5">
    <% if(pizzas != undefined && pizzas.length > 0) { %>
    <% pizzas.forEach(pizza =>{ %>

      <%- include('./_pizza', { pizza }) %>

    <% }) %>
    <% } else { %>

      <h1>Não tem pizzas cadastradas no sistema!</h1>
    
    <% } %>
  </section>
</div>

<meta name="description" content="Menu for our beautiful pizzaria!">
