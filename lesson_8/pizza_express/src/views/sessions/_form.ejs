<form class="w-50" action="/sessions" method="POST">
  <div class="form-group">
    <label for="email">Seu email</label>
  
    <input
      class="form-control"
      name="email"
      id="email"
      type="email"
    />
  </div>

  <div class="form-group">
    <label for="password">Senha</label>

    <input
      class="form-control"
      type="password"
      name="password"
      id="password"
    />
  </div>
  
  <div class="form-group">
    <button type="submit" class="btn btn-success">Logar</button>
  </div>
</form>
